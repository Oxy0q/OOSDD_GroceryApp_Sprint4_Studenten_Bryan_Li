<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <!-- Titel -->
        <Label Text="Welkom" FontSize="Large" HorizontalOptions="Center" />

        <!-- Email invoer -->
        <Entry Placeholder="E-mail" Text="{test@gmail.com}" Keyboard="Email" />

        <!-- Password invoer -->
        <Entry Placeholder="Wachtwoord" Text="{wachtwoord}" IsPassword="True" />

        <!-- Login knop -->
        <Button Text="Login"
                Command="{Binding LoginCommand}"
                HorizontalOptions="Center"
                BackgroundColor="#C49B33"
                TextColor="White"
                WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>
